{
    "type": "library",
    "name": "edmondscommerce/console-error-logger",
    "description": "Provides a class that can be used in Symfony 4 to log errors and non-zero exit statuses",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.3",
        "psr/log": "^3.0"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "edmondscommerce/*": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "EdmondsCommerce\\ConsoleErrorLogger\\": ["src/"]
        }
    },
    "minimum-stability": "stable"
}
